{
  "info": {
    "name": "SmartSettle - Offers + OTP Demo",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Request OTP",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": { "mode": "raw", "raw": "{\n  \"phone\": \"+911234567890\"\n}" },
        "url": { "raw": "{{base_url}}/auth/request-otp", "host": ["{{base_url}}"], "path": ["auth","request-otp"] }
      }
    },
    {
      "name": "Debug OTP (dev only)",
      "request": {
        "method": "GET",
        "url": { "raw": "{{base_url}}/auth/debug-otp?phone=+911234567890", "host": ["{{base_url}}"], "path": ["auth","debug-otp"], "query":[{"key":"phone","value":"+911234567890"}] }
      }
    },
    {
      "name": "Verify OTP",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": { "mode": "raw", "raw": "{\n  \"phone\": \"+911234567890\",\n  \"otp\": \"123456\"\n}" },
        "url": { "raw": "{{base_url}}/auth/verify-otp", "host": ["{{base_url}}"], "path": ["auth","verify-otp"] }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "if (pm.response.code === 200) {",
              "  var body = pm.response.json();",
              "  if (body.access_token) pm.environment.set('access_token', body.access_token);",
              "  if (body.temp_token) pm.environment.set('temp_token', body.temp_token);",
              "}"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Register (when user_exists=false)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{temp_token}}", "type": "text" }
        ],
        "body": { "mode": "raw", "raw": "{\n  \"name\": \"Charlie\"\n}" },
        "url": { "raw": "{{base_url}}/auth/register", "host": ["{{base_url}}"], "path": ["auth","register"] }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "if (pm.response.code === 200) {",
              "  var body = pm.response.json();",
              "  if (body.access_token) pm.environment.set('access_token', body.access_token);",
              "}"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Get Users (dev only)",
      "request": {
        "method": "GET",
        "header": [{ "key": "Authorization", "value": "Bearer {{access_token}}", "type": "text" }],
        "url": { "raw": "{{base_url}}/debug/users", "host": ["{{base_url}}"], "path": ["debug","users"] }
      }
    },
    {
      "name": "Create Offer (lender)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{access_token}}", "type": "text" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"amount_available\": 50000.00,\n  \"annual_interest_rate\": 12.0,\n  \"duration_months\": 12,\n  \"installments_count\": 12,\n  \"periodicity\": \"MONTHLY\",\n  \"min_borrow_amount\": 1000,\n  \"max_borrow_amount\": 50000,\n  \"description\": \"Short-term personal loans, monthly EMI\"\n}"
        },
        "url": { "raw": "{{base_url}}/offers", "host": ["{{base_url}}"], "path": ["offers"] }
      }
    },
    {
      "name": "List Offers (marketplace)",
      "request": {
        "method": "GET",
        "url": { "raw": "{{base_url}}/offers?limit=10&offset=0", "host": ["{{base_url}}"], "path": ["offers"], "query":[{"key":"limit","value":"10"},{"key":"offset","value":"0"}] }
      }
    },
    {
      "name": "Get Offer (detail)",
      "request": {
        "method": "GET",
        "url": { "raw": "{{base_url}}/offers/{{offer_id}}", "host": ["{{base_url}}"], "path": ["offers","{{offer_id}}"] }
      }
    },
    {
      "name": "Fund Offer (apply)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{access_token}}", "type": "text" }
        ],
        "body": { "mode": "raw", "raw": "{\n  \"amount_requested\": 15000.00,\n  \"start_date\": \"2026-02-01\"\n}" },
        "url": { "raw": "{{base_url}}/offers/{{offer_id}}/fund", "host": ["{{base_url}}"], "path": ["offers","{{offer_id}}","fund"] }
      }
    },
    {
      "name": "Latest Offers widget",
      "request": {
        "method": "GET",
        "url": { "raw": "{{base_url}}/offers/latest?limit=10", "host": ["{{base_url}}"], "path": ["offers","latest"], "query":[{"key":"limit","value":"10"}] }
      }
    },
    {
      "name": "Get Loan detail",
      "request": {
        "method": "GET",
        "header": [{ "key": "Authorization", "value": "Bearer {{access_token}}", "type": "text" }],
        "url": { "raw": "{{base_url}}/loans/{{loan_id}}", "host": ["{{base_url}}"], "path": ["loans","{{loan_id}}"] }
      }
    },
    {
      "name": "Repay Loan (partial/full)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{access_token}}", "type": "text" }
        ],
        "body": { "mode": "raw", "raw": "{\n  \"amount\": 1500.00,\n  \"note\": \"partial payment\"\n}" },
        "url": { "raw": "{{base_url}}/loans/{{loan_id}}/repay", "host": ["{{base_url}}"], "path": ["loans","{{loan_id}}","repay"] }
      }
    }
  ],
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "exec": [],
        "type": "text/javascript"
      }
    }
  ]
}
